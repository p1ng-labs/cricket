{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/types/*": ["src/@types/*"],
      "@/client/*": ["src/client/*"],
      "@/server/*": ["src/server/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "*.js"],
  "exclude": ["node_modules"]
}
